<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            
            VerticalOptions="Start">
            
            <SearchBar 
                x:Name="Search"
                Placeholder="Enter URI"
                SearchButtonPressed="LoadPage"

                />
            <ScrollView
                x:Name="MainText"
                Scrolled="MainText_Scrolled"
                Padding="10"
                
                >
                <StackLayout x:Name="TextStack">
                    <Label Text="ABCD"/>
                </StackLayout>
            </ScrollView>

            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Padding="10" Spacing="100">
                <Button Text="Prev"/>
                <Button Text="Next"/>
            </HorizontalStackLayout>
            <Button x:Name="Test" Text="Test" Clicked="Button1_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
